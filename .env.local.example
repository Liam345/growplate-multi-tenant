# Environment Configuration for GrowPlate Multi-Tenant Platform
# Copy this file to .env.local and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/growplate_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=growplate_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here

# Database Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_IDLE_TIMEOUT=30000
DATABASE_TIMEOUT=5000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication Configuration (Required for Task 6)
JWT_SECRET=your-super-secure-secret-key-min-32-characters-long-please-change-this
JWT_EXPIRES_IN=24h
JWT_ISSUER=growplate.com
JWT_AUDIENCE=api.growplate.com

# Password Security
BCRYPT_SALT_ROUNDS=12

# Stripe Configuration (for future tasks)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Feature Flags (optional)
ENABLE_SIGNUP=true
ENABLE_LOGGING=true
ENABLE_RATE_LIMITING=false